      "@zc-ui/zc-manage-app": ["libs/zc-manage-app/src/index.ts"],
      "@zc-ui/zc-menu": ["libs/zc-menu/src/index.ts"],
      "@zc-ui/zc-tabs": ["libs/zc-tabs/src/index.ts"],
      "@zc-ui/zc-step-form": ["libs/zc-step-form/src/index.ts"],
      "@zc-ui/zc-image-slideshow": ["libs/zc-image-slideshow/src/index.ts"],
